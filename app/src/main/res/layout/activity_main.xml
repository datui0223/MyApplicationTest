<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转"
                />
            <EditText
                android:id="@+id/et_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加" />

                <Button
                    android:id="@+id/bt_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除" />

                <Button
                    android:id="@+id/bt_del_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除全部" />

                <Button
                    android:id="@+id/bt_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询" />

                <Button
                    android:id="@+id/bt_find_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询全部" />

                <Button
                    android:id="@+id/bt_addId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加uid" />

                <Button
                    android:id="@+id/bt_del_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除表" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_toone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1对1" />

                <Button
                    android:id="@+id/bt_tomany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1对多" />

                <Button
                    android:id="@+id/bt_ntom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多对多" />

                <Button
                    android:id="@+id/bt_find_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询关联表" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
