<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_show6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_launcher"
                fresco:retryImageScaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    />

                <Button
                    android:id="@+id/bt_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_next" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加" />

                    <Button
                        android:id="@+id/bt_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除" />

                    <Button
                        android:id="@+id/bt_del_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除全部" />

                    <Button
                        android:id="@+id/bt_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更新" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询" />

                    <Button
                        android:id="@+id/bt_find_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询全部" />

                    <Button
                        android:id="@+id/bt_addId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加uid" />

                    <Button
                        android:id="@+id/bt_del_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除表" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_toone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1对1" />

                    <Button
                        android:id="@+id/bt_tomany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1对多" />

                    <Button
                        android:id="@+id/bt_ntom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多对多" />

                    <Button
                        android:id="@+id/bt_find_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询关联表" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
